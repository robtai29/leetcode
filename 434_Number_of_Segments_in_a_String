/*************************************************************
8.6.22
https://leetcode.com/problems/non-overlapping-intervals/
**************************************************************/

class Solution {
    public int countSegments(String s) {
        int segments = 0;
        for (int i = 0; i < s.length(); i++){
            if (s.charAt(i) != ' ' && (i == 0 || (i-1 >= 0 && s.charAt(i-1) == ' '))){
                segments++;
            }
        }

        return segments;
    }
}