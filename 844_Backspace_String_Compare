/*************************************************************
9.29.22, 1.26.26
https://leetcode.com/problems/backspace-string-compare/f
**************************************************************/

class Solution {
    public boolean backspaceCompare(String s, String t) {
        char[] sArray = s.toCharArray();
        char[] tArray = t.toCharArray();

        int sIndex = sArray.length-1;
        int tIndex = tArray.length-1;

        int sSkips = 0, tSkips = 0;

        while (sIndex >= 0 || tIndex >= 0){
            while (sIndex >= 0 && (sSkips > 0 || sArray[sIndex] == '#')){
                sSkips = (sArray[sIndex] == '#') ? sSkips+1 : sSkips - 1;  
                sIndex--;
            }

            while (tIndex >= 0 && (tSkips > 0 || tArray[tIndex]  == '#')){
                tSkips = (tArray[tIndex] == '#') ? tSkips+1 : tSkips - 1;  
                tIndex--;
            }

            if (sIndex >= 0 != tIndex >= 0){
                return false;
            }

            char tCh = tIndex == -1 ? '@' : tArray[tIndex];
            char sCh = sIndex == -1 ? '@' : sArray[sIndex];

            if (tCh != sCh){
                return false;
            }

            sIndex--;
            tIndex--;
        }

        return true;

    }
}

