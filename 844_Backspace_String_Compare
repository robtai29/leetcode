    private String processString(String s){
        StringBuilder sb = new StringBuilder();
        
        for (char ch : s.toCharArray()){
            if (ch == '#'){
                
                if (!sb.isEmpty()){
                sb.deleteCharAt(sb.length() -1);
                }
            }else{
                sb.append(ch);
