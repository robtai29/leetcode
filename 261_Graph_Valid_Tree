/*************************************************************
7.19.25
https://leetcode.com/problems/graph-valid-tree/description/?envType=problem-list-v2&envId=union-find
https://neetcode.io/problems/valid-tree
**************************************************************/

class Solution {
    static class UnionFind {
        private int[] parent;
        private int[] weight;
        private int size;

        public UnionFind(int n){
            size = n;
            parent = new int[n];
            weight = new int[n];
            for (int i = 0; i < n; i++){
                parent[i] = i;
                weight[i] = 1;
            }
        }

        public void union(int p, int q){
            int rootP = find(p);
            int rootQ = find(q);

            if (rootP != rootQ){
                if (weight[rootP] > weight[rootQ]){
                    parent[rootQ] = rootP;
                    weight[rootP] += weight[rootQ];
                }else {
                    parent[rootP] = rootQ;
                    weight[rootQ] += weight[rootP];
                }
                size--;
            }
        }

        public boolean isConnected(int p, int q){
            return find(p) == find(q);
        }

        public int find(int p){
            if (parent[p] != p){
                parent[p] = find(parent[p]);
            }

            return parent[p];
        }

        public int size(){
            return this.size;
        }
    }
    public boolean validTree(int n, int[][] edges) {
        UnionFind uf = new UnionFind(n);
        for (int[] edge : edges){
            if (uf.isConnected(edge[0], edge[1])){
                return false;
            }
            uf.union(edge[0], edge[1]);
        }
        return uf.size() == 1;
    }
}
