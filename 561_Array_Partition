/*************************************************************
8.27.22
https://leetcode.com/problems/array-partition/
**************************************************************/

class Solution {
    public int arrayPairSum(int[] nums) {
        int res = 0;
        Arrays.sort(nums);
        for (int i = 0; i +1 < nums.length; i= i+2){
            res += nums[i];
        }
        
        return res;
        
    }
}